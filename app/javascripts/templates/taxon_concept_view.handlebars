{{#if view.showHigherTaxaBar}}
  {{collection Checklist.HigherTaxaCollectionView
  contentBinding="higherTaxa"}}
{{else}}
  {{#unless view.isHigherTaxa}}
  <div class="column-holder">
    <div class="column-frame">
      <div class="column-container">
        <div class="column">
          <h2 style="{{unbound view.headingStyle}}">
            {{{unbound view.full_name}}}
            {{# if view.showAuthor}}
              <span class="author_year">{{unbound author_year}}</span>
            {{/if}}
            {{#if recently_changed}}
              <a href="#" class="tooltip new-taxa" title="Recently Changed">
                <img src="/images/new-indicator.png" title="Recently Changed" alt="Recently Changed" />
              </a>
            {{/if}}
          </h2>
          {{#if view.showSynonyms }}
            <div class="synonym">({{unbound view.synonyms}})</div>
          {{/if}}
          {{#unless view.isTaxonomicLayout}}
            <ul class="details">
              {{#unless isPlant}}
              <li>{{unbound phylum_name}}</li>
              <li>{{unbound class_name}}</li>
              <li>{{unbound order_name}}</li>
              {{/unless}}
              <li>{{unbound family_name}}</li>
            </ul>
          {{/unless}}
          <ul class="default-list">
            {{#if view.showEnglish }}
              <li>ENG - {{collection Checklist.TaxonConceptCommonNameView
              contentBinding="view.english"}}</li>
            {{/if}}
            {{#if view.showSpanish }}
              <li>SPA - {{collection Checklist.TaxonConceptCommonNameView
              contentBinding="view.spanish"}}</li>
            {{/if}}
            {{#if view.showFrench }}
              <li>FRE - {{collection Checklist.TaxonConceptCommonNameView
              contentBinding="view.french"}}</li>
            {{/if}}
          </ul>
        </div>
        <div class="column">
          <div class="column-area">
            <div class="holder">
              <div class="frame">
                {{view Checklist.TaxonConceptCurrentListingView
                  contentBinding="this"
                }}
              </div>
            </div>
          </div>
        </div>
        <div class="column style01">
          <div class="column-area">
            <div class="holder">
              <div class="frame">
                <p>
                  {{view Checklist.CountryListingView
                  contentBinding="cites_populations"}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="slide">
        <div class="column-container">
          <div class="column">
            <div class="area-holder">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="opener-holder">
    <div class="opener">
      Show History
      <span>&#9660;</span>
    </div>
    <div class="closer">
      Hide History
      <span>x</span>
    </div>
  </div>
  {{/unless}}
{{/if}}
