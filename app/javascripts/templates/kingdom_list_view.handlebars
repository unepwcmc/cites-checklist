{{#if view.isFiltered}}
  <div class="filter-control">
    <a {{action "clearSearch" on="click" target="view"}} class="clear-search">X {{t search.clear}}</a>
  </div>
{{/if}}
{{#if total_cnt}}
  {{#if view.showAnimalia }}
    {{collection Checklist.TaxonConceptListView contentBinding="animalia"}}
  {{/if}}
  {{#if view.showPlantae }}
    {{collection Checklist.TaxonConceptListView contentBinding="plantae"}}
  {{/if}}
{{else}}
  <div class="error-msg">
    {{t search.no_results}}
  </div>
{{/if}}

{{#if view.showPageControls}}
  <ul class="paging">
    {{# if view.showPrev }}
      <li><a class="btn-prev" href="#" {{action "prevPage" target="view" on="click"}}>&#9664;</a></li>
    {{/if}}

    <li>{{t search.results.page}} {{view.currentPage}}/{{view.totalPages}}</li>

    {{# if view.showNext }}
      <li><a class="btn-next" href="#" {{action "nextPage" target="view" on="click"}}>&#9654;</a></li>
    {{/if}}
  </ul>
{{/if}}
