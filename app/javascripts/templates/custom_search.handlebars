<div class="custom-holder">
  <a href="#" class="btn-custom">Advanced Options</a>
  <div class="drop">
    <form action="#">
      <fieldset>
        <div class="row-holder">
          <strong class="heading">COMMON NAMES</strong>
          <div class="row">
              {{view Checklist.FilterCheckbox
                context="showEnglish"
                checkedBinding="controllers.filtersController.showEnglish"
                id="eng-checkbox"
                class="styled"
                controllerBinding="controllers.filtersController"
              }}
              <label for="eng-checkbox">ENG</label>
          </div>
          <div class="row">
            {{view Checklist.FilterCheckbox
              context="showSpanish"
              checkedBinding="controllers.filtersController.showSpanish"
              id="spa-checkbox"
              class="styled"
              controllerBinding="controllers.filtersController"
            }}
            <label for="spa-checkbox">SPA</label>
          </div>
          <div class="row">
            {{view Checklist.FilterCheckbox
              context="showFrench"
              checkedBinding="controllers.filtersController.showFrench"
              id="fre-checkbox"
              class="styled"
              controllerBinding="controllers.filtersController"
            }}
            <label for="fre-checkbox">FRE</label>
          </div>
        </div>

        <div class="row-holder">
          <strong class="heading">Online view</strong>
          {{collection Checklist.SortingRadioButtons
            controllerBinding="controllers.filtersController"}}
        </div>

        <div class="row-holder style01">
          <strong class="heading">DISPLAY</strong>
          <div class="row">
            {{view Checklist.FilterCheckbox
              checkedBinding="controllers.filtersController.showSynonyms"
              context="showSynonyms"
              id="synonyms-checkbox"
              class="styled"
              controllerBinding="controllers.filtersController"
            }}
            <label for="synonyms-checkbox">Synonyms</label>
          </div>
          <div class="row">
            {{view Checklist.FilterCheckbox
              checkedBinding="controllers.filtersController.showAuthor"
              context="showAuthor"
              id="author-checkbox"
              class="styled"
              controllerBinding="controllers.filtersController"
            }}
            <label for="author-checkbox">Author's name</label>
          </div>
          <div class="row">
            {{view Checklist.UnfoldHistoryCheckbox
              checkedBinding="view.isChecked"
              id="history-checkbox"
              class="styled"
            }}
            <label for="history-checkbox">History of listing</label>
          </div>
        </div>
      </fieldset>
    </form>
    <img src="/images/decor-dropdown-dark.png" alt="image description" class="decor" width="24" height="13" >
  </div>
</div>
