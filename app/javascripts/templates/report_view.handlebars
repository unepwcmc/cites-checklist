<ul>
  <li>
    {{#if controllers.downloadController.generating.length}}
      <a {{action "generatingClick" target="view" on="click"}} id="generating-downloads-btn" href="#generating-downloads">
        {{tt reports.count countBinding="controllers.downloadController.generating.length"}}
      </a>
    {{/if}}
  </li>
  <li>
    {{#if controllers.downloadController.complete.length}}
      <a class="red" id="complete-download-btn" href="#complete-downloads">
        {{tt reports.ready.count countBinding="controllers.downloadController.complete.length"}}
      </a>
    {{/if}}
  </li>
  <li>
    {{#if controllers.downloadController.failed.length}}
      <a class="red" id="failed-download-btn" href="#failed-downloads">
        {{tt reports.failed.count countBinding="controllers.downloadController.failed.length"}}
      </a>
    {{/if}}
  </li>
</ul>

<div style="display:none">
  <div id="generating-download" class="lightbox downloads status">
    <div class="heading-holder">
      <strong class="heading">{{t reports.latest.title}}</strong>
    </div>
    <div class="text-holder">
      {{t reports.generating.description}}
    </div>
    <div class="list-holder">
      <div class="scroll-area downloads-list">
        {{collection Checklist.DownloadCollectionView
          contentBinding="controllers.downloadController.latest"}}
      </div>
    </div>
  </div>
</div>

<div style="display:none">
  <div id="generating-downloads" class="lightbox downloads status">
    <div class="heading-holder">
      <strong class="heading">{{t reports.generating.title}}</strong>
    </div>
    <div class="text-holder">
      {{t reports.generating.description}}
    </div>
    <div class="list-holder">
      <div class="scroll-area downloads-list">
        {{collection Checklist.DownloadCollectionView
          contentBinding="controllers.downloadController.generating"}}
      </div>
    </div>
  </div>
</div>

<div style="display:none">
  <div id="complete-downloads" class="lightbox downloads status">
    <div class="heading-holder">
      <strong class="heading">{{t reports.ready.title}}</strong>
    </div>
    <div class="list-holder">
      <div class="scroll-area downloads-list">
        {{collection Checklist.DownloadCollectionView
          contentBinding="controllers.downloadController.complete"}}
      </div>
    </div>
  </div>
</div>

<div style="display:none">
  <div id="failed-downloads" class="lightbox downloads status">
    <div class="heading-holder">
      <strong class="heading">{{tt reports.failed.count countBinding="controllers.downloadController.failed.length"}}</strong>
    </div>
    <div class="text-holder">
      {{t reports.failed.description}}
    </div>
    <div class="list-holder">
      <div class="scroll-area downloads-list">
        {{collection Checklist.DownloadCollectionView
          contentBinding="controllers.downloadController.failed"}}
      </div>
    </div>
  </div>
</div>
