<header id="header">
  <div class="wrap">
    <div class="content">
      <div class="c1">

        <div class="logo-holder">
          <h1 class="logo"><a href="#">checklist</a></h1>
          <a href="#" class="top-links">About</a>
        </div>

        <div class="header-frame">
          <div class="column-holder">
            <div class="column-frame">

              <div class="column">
                <div class="search">
                  <fieldset>
                    <div class="search-holder">
                      <div class="search-frame">
                        {{view Checklist.SearchTextField
                          valueBinding="controllers.filtersController.scientificName"
                          id="scientific_name"
                          title="search"
                          placeholder="Species, taxon, synonym or common name..."
                        }}
                      </div>
                    </div>
                    <input type="submit" value="SEARCH" />
                  </fieldset>
                  <div class="drop" style="display: none;" id="autocomplete-dropdown">
                    <img src="images/img-decor1.png" alt="image description" class="decor" width="24" height="13" >
                  </div>
                </div>
              </div>
              <div class="column">
                <div class="appendix-holder">
                  <a href="#" class="btn"><span>ALL</span></a>
                  <div class="drop">
                    <div class="drop-holder">
                      {{collection Checklist.AppendixFormView contentBinding="controllers.filtersController.appendicesContent"}}
                    </div>
                    <img src="images/img-decor2.png" alt="image description" class="decor" width="24" height="13" >
                  </div>
                </div>
              </div>

              <div class="column style01">
                <div class="btn-holder">
                  <a href="#" class="btn"><span>All Locations</span></a>
                  <div class="drop">
                    {{view Ember.View templateName="location_view"}}
                    <img src="images/img-decor2.png" alt="image description" class="decor" width="24" height="13" >
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="aside">
      <div class="custom-holder">
        <a href="#" class="btn-custom">Custom Search</a>
        <div class="drop">
          <form action="#">
            <fieldset>
              <div class="row-holder">
                <strong class="heading">COMMON NAMES</strong>
                <div class="row">
                  {{view Ember.Checkbox
                    checkedBinding="controllers.filtersController.showEnglish"
                    id="eng-checkbox"
                    class="styled"
                  }}
                  <label for="eng-checkbox">ENG</label>
                </div>
                <div class="row">
                  {{view Ember.Checkbox
                    checkedBinding="controllers.filtersController.showSpanish"
                    id="spa-checkbox"
                    class="styled"
                  }}
                  <label for="spa-checkbox">SPA</label>
                </div>
                <div class="row">
                  {{view Ember.Checkbox
                    checkedBinding="controllers.filtersController.showFrench"
                    id="fre-checkbox"
                    class="styled"
                  }}
                  <label for="fre-checkbox">FRE</label>
                </div>
              </div>

              <div class="row-holder">
                <strong class="heading">SORTING</strong>
                <div class="row">
                  {{view Checklist.SortingRadioButton
                    group="sorting"
                    customId="alphabetical-radio"
                    title="Alphabetical"
                    value="alphabetical"
                    className="styled"
                  }}
                </div>
                <div class="row">
                  {{view Checklist.SortingRadioButton
                    group="sorting"
                    customId="taxonomical-radio"
                    title="Taxonomical"
                    isChecked=true
                    value="taxonomical"
                    className="styled"
                  }}
                </div>
              </div>

              <div class="row-holder style01">
                <strong class="heading">OTHER OPTIONS</strong>
                <div class="row">
                  <input id="item6" type="checkbox" checked="checked" class="styled">
                  <label for="item6">Show synonyms</label>
                </div>
                <div class="row">
                  <input id="item7" type="checkbox" class="styled">
                  <label for="item7">Unfold history</label>
                </div>
                <div class="row">
                  <input id="item8" type="checkbox" checked="checked" class="styled">
                  <label for="item8">Show items with implicit classification</label>
                </div>
              </div>
            </fieldset>
          </form>
          <img src="images/img-decor3.png" alt="image description" class="decor" width="24" height="13" >
        </div>
      </div>
    </div>
  </div>
</header>

<section id="main">
  <div class="wrap">
    <div class="content">
      {{#each controllers.taxonConceptController.content}}
        {{view Checklist.KingdomListView contentBinding="this"
          filtersControllerBinding="controllers.filtersController"
        }}
      {{/each}}
    </div>

    <div class="aside">
      <div class="text-frame">
        <strong class="heading">4,201 <span>taxa</span></strong>
      </div>
      <div class="btn-holder">
        <a href="#downloads" id="download" class="btn red">Download</a>
        <div id="downloads" style="display: none;" class="lightbox downloads">
          <div class="heading-holder">
            <strong class="heading">Download 4,201 Taxa</strong>
          </div>
          <div class="text-holder">
            <a href="#downloads" id="download" class="btn red"><strong>PDF</strong></a>
            <a href="#downloads" id="download" class="btn red"><strong>CSV</strong></a>
            <a href="#downloads" id="download" class="btn red"><strong>JSON</strong></a>
          </div>
        </div>
      </div>
      {{view Checklist.SavedSearchView}}
    </div>
  </div>
</section>
