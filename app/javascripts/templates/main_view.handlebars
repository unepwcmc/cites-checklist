{{#view Checklist.ChecklistForm controllerBinding="Checklist.TaxonConceptController"}}
  <p>Filter by country:</p>
  {{view Checklist.CountrySelect}}
  <button type="submit">Go</button>
{{/view}}

<p>Selected:
{{#each Checklist.SelectedCountriesController.countries}}
  {{name}}
{{/each}}
</p>

<ul>
{{#each taxonConcepts}}
  <li>
    <p class="level{{unbound depth}}">
      {{full_name}}
    </p>
  </li>
{{/each}}
</ul>
