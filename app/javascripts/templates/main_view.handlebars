{{#view Checklist.ChecklistForm
  controllerBinding="Checklist.taxonConceptController"
  filtersControllerBinding="Checklist.selectedFiltersController"
}}
  <p>Filter by country:</p>
  {{view Em.Select
    multiple = "true"
    viewName = "countryFilter"
    contentBinding = "Checklist.countriesController"
    selectionBinding = "Checklist.selectedFiltersController.countries"
    optionLabelPath = "content.name"
    optionValuePath = "content.id"
  }}
<p>Selected countries:
{{#each Checklist.selectedFiltersController.countries}}
  {{name}}
{{/each}}
</p>
  <p>Filter by region:</p>
  {{view Em.Select
    multiple = "true"
    viewName = "regionFilter"
    contentBinding = "Checklist.regionsController"
    selectionBinding = "Checklist.selectedFiltersController.regions"
    optionLabelPath = "content.name"
    optionValuePath = "content.id"
  }}
  <p>Selected regions:
  {{#each Checklist.selectedFiltersController.regions}}
    {{name}}
  {{/each}}
  </p>
  <p>Filter by appendix:</p>
  {{view Em.Select
    multiple = "true"
    viewName = "appendixFilter"
    contentBinding = "Checklist.appendicesController"
    selectionBinding = "Checklist.selectedFiltersController.appendices"
    optionLabelPath = "content.abbreviation"
    optionValuePath = "content.id"
  }}
  <p>Selected appendices:
  {{#each Checklist.selectedFiltersController.appendices}}
    {{abbreviation}}
  {{/each}}
  </p>
  <p>
  {{view Ember.Checkbox checkedBinding="Checklist.selectedFiltersController.taxonomicLayout"}} taxonomic layout
  </p>
  <button type="submit">Go</button>
  <h2>Download pdf version:</h2>
  <ul>
    <li>CITES species index:
      <a href="{{unbound indexPdfLink}}">full</a>
      <a href="#" {{action "downloadCustomIndexPdf" on="click"}}>customised</a>
    </li>
    <li>history of CITES listings:
      <a href="{{unbound historyPdfLink}}">full</a>
      <a href="#" {{action "downloadCustomHistoryPdf" on="click"}}>customised</a>
    </li>
  </ul>

{{/view}}
{{#each Checklist.taxonConceptController.content}}
  <h2>FAUNA</h2>
  {{collection Checklist.TaxonConceptList contentBinding="animalia"}}
  <h2>FLORA</h2>
  {{collection Checklist.TaxonConceptList contentBinding="plantae"}}
{{/each}}
